<%- model_class = Socio -%>
<div class="page-header">
  <h1>Gestion de socios</h1>
</div>
<%= render partial: "search", locals: {url: socios_path} %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:activo) %></th>
      <th><%= model_class.human_attribute_name(:categoria_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "socio_rows", locals: {socios: @socios} %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_socio_path,
            :class => 'btn btn-primary' %>
