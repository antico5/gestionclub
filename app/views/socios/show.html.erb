<%- model_class = Socio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="well">
  <h4> Datos personales </h4>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
    <dd><%= @socio.nombre %></dd>
    <dt><strong><%= model_class.human_attribute_name(:dni) %>:</strong></dt>
    <dd><%= @socio.dni %></dd>
    <dt><strong><%= model_class.human_attribute_name(:domicilio) %>:</strong></dt>
    <dd><%= @socio.domicilio %></dd>
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= @socio.email %></dd>
    <dt><strong><%= model_class.human_attribute_name(:fecha_alta) %>:</strong></dt>
    <dd><%= l @socio.fecha_alta if @socio.fecha_alta%></dd>
    <dt><strong><%= model_class.human_attribute_name(:fecha_baja) %>:</strong></dt>
    <dd><%= l @socio.fecha_baja if @socio.fecha_baja %></dd>
    <dt><strong><%= model_class.human_attribute_name(:comentario) %>:</strong></dt>
    <dd><%= @socio.comentario %></dd>
    <dt><strong><%= model_class.human_attribute_name(:activo) %>:</strong></dt>
    <dd><%= yes_no_icon @socio.activo %></dd>
    <dt><strong><%= model_class.human_attribute_name(:categoria_id) %>:</strong></dt>
    <dd><%= @socio.categoria %></dd>
  </dl>
</div>
<%= render partial: "cuenta_corriente" %>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              socios_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_socio_path(@socio), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              socio_path(@socio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
