<%= simple_form_for @socio, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  <%= f.input :dni %>
  <%= f.input :domicilio %>
  <%= f.input :email %>
  <%= f.input :comentario %>
  <%= f.association :categoria %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                socios_path, :class => 'btn' %>
  </div>

<% end %>
