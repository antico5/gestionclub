<%- model_class = Categoria -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @categoria.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:edad_hasta) %>:</strong></dt>
  <dd><%= @categoria.edad_hasta %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              categorias_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_categoria_path(@categoria), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              categoria_path(@categoria),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
